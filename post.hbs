{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{navigation}}
<header>
  <div class="inner">
    {{! Each post has the blog logo at the top, with a link back to the home page }}
    <a href="{{@blog.url}}">
      {{#if @blog.logo}}
        <img src="{{@blog.logo}}">
      {{else}}
        <h1 class="blog-title">{{@blog.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
      {{/if}}
    </a>
  </div>
</header>
<main class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <article class="{{post_class}}">
          {{#post}}
          {{! Everything below outputs content of the the post which has been published }}
        <span class="post-meta"><time datetime="{{date format='DD. MMM, YYYY'}}">{{date format='DD. MMM, YYYY'}}</time>{{#if tags}} on {{tags separator=" | "}}{{/if}}</span>

          <h1 class="post-title">{{{title}}}</h1>
          <section class="post-content">
            {{content}}
          </section>

          <div class="post-footer">
            <section class="share pull-xs-right">
              <h4>Share</h4>
              <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="mdi mdi-facebook-box"></i>
              </a>
              <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="mdi mdi-twitter"></i>
              </a>
            </section>
          </div>
          {{/post}}
        </article>
      </div>
    </div>
  </div>
</main>
